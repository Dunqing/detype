{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2020", "ES2021.String"],
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
